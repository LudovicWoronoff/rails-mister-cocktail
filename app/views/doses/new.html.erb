<h1>Create a new dose</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient, collection: Ingredient.all %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", cocktails_path %>
